/* pages/index/index.wxss */

/* 以下是banner部分 */
/* 以下是banner部分 */
.banner {
  width: 696rpx;
  height: 300rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  overflow: hidden;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.banner-item-img {
  width: 696rpx;
  height: 300rpx;
}
/* 以下是选择座位部分 */
/* 以下是选择座位部分 */
.chooseSeat {
  width: 696rpx;
  height: 380rpx;
  margin: 0 auto;
}

.chooseSeat>.tit {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.chooseSeat-Btn-Wrap {
  display: flex;
  justify-content: space-between;
}

.btn-left {
  width: 335rpx;
  height: 300rpx;
  box-shadow: 1rpx 1rpx 10rpx #ccc;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border-radius: 8rpx;
}

.btn-big,.btn-small {
  font-size: 28rpx;
  margin-top: 50rpx;
  color: white;
  width: 181rpx;
  height: 51rpx;
  text-align: center;
  background: linear-gradient(90deg, rgba(140, 139, 206, 1) 3%, rgba(193, 220, 249, 1) 106%);
  border-radius: 25.5rpx;
  line-height: 51rpx;
}
.btn-small{
  margin-top: 0rpx;
  width: 150rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
}

.seat-btn-tit {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.seat-btn-info {
  display: block;
  font-size: 24rpx;
  color: #7f7f7f;
}

.btn-right {
  width: 335rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.btn-right-top,.btn-right-btm {
  height: 140rpx;
  width: 100%;
  box-shadow: 1rpx 1rpx 10rpx #ccc;
  border-radius: 8rpx;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.seat-btn-line1{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
/* 以下是"自习室地址"部分 */
/* 以下是"自习室地址"部分 */
.site{
  width: 696rpx;
  margin: 0 auto;
}
.room-address{
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}
.address-wrap{
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: rgb(242,242,242);
  border-radius: 33rpx;
  width: 100%;
  height: 60rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
}
.location-icon{
  width: 34rpx;
  height: 34rpx;
}
.address-title{
  display: flex;
}
.address-btn{
  color: #8080ff;
  cursor: pointer;
}
/* 以下是"空间介绍"部分  */
/* 以下是"空间介绍"部分  */
.spaceWrap{
  width: 696rpx;
  margin: 0 auto;
}
.space{
  width: 100%;
  margin-top: 63rpx;
  font-size: 22rpx;
  color:#555 ;
  line-height: 45rpx;
}
.space-tit{
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
  margin-bottom: 10rpx;
}
.space-img{
  width: 700rpx;
  height: 307rpx;
}
.step-wrap{
  margin-top: 63rpx;
}
.step{
  width: 100%;
  height: 73rpx;
  border-radius: 10rpx;
  box-shadow: 0px 0px 5px rgba(127, 127, 127, 0.349019607843137);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 36rpx;
}
.step-con{
  display: flex;
  color: #333;
}
.circle{
  width: 36rpx;
  height: 36rpx;
  border: 1rpx solid #333;
  border-radius: 50%;
  text-align: center;
  overflow: hidden;
  line-height: 36rpx;
  margin-right: 20rpx;
}
.tips-wrap{
  width: 100%;
}
.tips-wrap{
  width: 100%;
  box-sizing: border-box;
  background-color:rgb(242,242,242) ;
  min-height: 530rpx;
  padding:20rpx  27rpx;
  border-radius: 20rpx;
}
.tips{
  font-size: 25rpx;
  color: #7f7f7f;
  line-height: 54rpx;
  font-weight: 400;
  margin-bottom: 30rpx;
}
.tips-title{
  font-weight: 600;
}